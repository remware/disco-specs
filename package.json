{
    "name": "disco-specs",
    "displayName": "disco-specs",
    "description": "Disco specifications",
    "version": "0.0.1",
    "publisher": "remware",
    "icon": "images/disco_icon.png",
    "engines": {
        "vscode": "^1.22.0"
    },
    "categories": [
        "Programming Languages",
        "Other"
    ],
    "keywords": [
        "disco",
        "specifications",
        "pseudo-code",
        "log-processing"
    ],
    "activationEvents": [
        "onCommand:extension.compileSpecs"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.compileSpecs",
                "title": "Compile specs"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.17",
        "tslint": "^5.8.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    },
    "dependencies": {
        "vscode-languageclient": "^4.0.0"
    }
}
